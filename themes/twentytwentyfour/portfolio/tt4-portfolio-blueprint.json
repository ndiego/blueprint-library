{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"preferredVersions": {
		"php": "8.0",
		"wp": "latest"
	},
	"landingPage": "/wp-admin/site-editor.php",
	"login": true,
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "setSiteOptions",
			"options": {
				"blogname": "Leia Acosta"
			}
		},
		{
			"step": "updateUserMeta",
			"meta": {
				"admin_color": "modern"
			},
			"userId": 1
		},
		{
			"step": "installPlugin",
			"pluginZipFile": {
				"resource": "wordpress.org/plugins",
				"slug": "gutenberg"
			}
		},
		{
			"step": "installTheme",
			"themeZipFile": {
				"resource": "wordpress.org/themes",
				"slug": "twentytwentyfour"
			}
		},
		{
			"step": "wp-cli",
			"command": "wp post delete 1 2 3 --force"
		},
		{
			"step": "importWxr",
			"file": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/ndiego/wp-demo-sites/main/themes/twentytwentyfour/portfolio/tt4-portfolio-content.xml"
			}
		},
		{
			"step": "wp-cli",
			"command": "wp option update site_logo 137"
		},
		{
			"step": "wp-cli",
			"command": "wp plugin delete hello-dolly"
		}
	]
}